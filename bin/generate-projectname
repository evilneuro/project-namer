#!/usr/bin/env bash

APP_DIR=$(realpath "$(dirname "${0}")" | rev | cut -d/ -f2- | rev)
ADJS_FILE=${APP_DIR}/etc/adjectives.txt
NOUN_FILE=${APP_DIR}/etc/nouns.txt
cd "${APP_DATA}" || exit
if [ -s ${ADJS_FILE} ] && [ -s ${NOUN_FILE} ]
then
	echo "$(shuf -n 1 ${ADJS_FILE}) $(shuf -n 1 ${NOUN_FILE})" | tr '[:lower:]' '[:upper:]'
fi
